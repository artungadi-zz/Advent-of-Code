    public static void part1() {
        Map<String, String> bracketMap = new Map<String, String> {
            ')' => '(',
            ']' => '[',
            '}' => '{',
            '>' => '<'
        };

        Map<String, Integer> illegalCounterMap = new Map<String, Integer> {
            ')' => 0,
            ']' => 0,
            '}' => 0,
            '>' => 0
        };

        Map<String, Integer> illegalPointMap = new Map<String, Integer> {
            ')' => 3,
            ']' => 57,
            '}' => 1197,
            '>' => 25137
        };

        for(String line : input) {
            List<String> openingList = new List<String>();
            for(String bracket : line.split('')) {
                if(bracketMap.values().contains(bracket)) {
                    openingList.add(bracket);
                } else if(bracketMap.get(bracket) == openingList[openingList.size() - 1]) {
                    openingList.remove(openingList.size() - 1);
                } else {
                    illegalCounterMap.put(bracket, illegalCounterMap.get(bracket) + 1);
                    break;
                }
            }
        }

        Integer totalIllegal = 0;
        for(String bracket : illegalCounterMap.keySet()) {
            totalIllegal = totalIllegal + (illegalCounterMap.get(bracket) * illegalPointMap.get(bracket));
        }

        System.debug('Part 1 : ' + totalIllegal);
    }

    public static void part2() {
        Map<String, String> bracketMap = new Map<String, String> {
            ')' => '(',
            ']' => '[',
            '}' => '{',
            '>' => '<'
        };

        Map<String, Integer> scoreMap = new Map<String, Integer> {
            '(' => 1,
            '[' => 2,
            '{' => 3,
            '<' => 4
        };

        List<Long> scoreList = new List<Long>();

        for(String line : input) {
            Long lineScore = 0;
            Boolean illegal = false;
            List<String> openingList = new List<String>();
            for(String bracket : line.split('')) {
                if(bracketMap.values().contains(bracket)) {
                    openingList.add(bracket);
                } else if(bracketMap.get(bracket) == openingList[openingList.size() - 1]) {
                    openingList.remove(openingList.size() - 1);
                } else {
                    illegal = true;
                    break;
                }
            }

            if(illegal) {
                continue;
            } else if(openingList.size() != 0) {
                for(Integer i = openingList.size()-1; i >= 0; i--) {
                    lineScore = (lineScore * 5) + scoreMap.get(openingList[i]);
                }
                scoreList.add(lineScore);
            }
        }

        scoreList.sort();
        System.debug('Part 2 : ' + scoreList[(scoreList.size() / 2)]);
    }

